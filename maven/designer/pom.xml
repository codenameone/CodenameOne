                                  <id>attach-jar-with-dependencies</id>
                                  <phase>package</phase>
                                  <goals>
                                    <goal>attach-artifact</goal>
                                  </goals>
                                  <configuration>
                                    <artifacts>
                                      <artifact>
                                        <file>${project.build.directory}/${project.build.finalName}-jar-with-dependencies.zip</file>
                                        <type>zip</type>
                                        <classifier>jar-with-dependencies</classifier>
                                      </artifact>
                                      
                                    </artifacts>
                                  </configuration>
                                </execution>
                              </executions>

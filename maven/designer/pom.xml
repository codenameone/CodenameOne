            <build>
                <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <executions>
                        <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <configuration>
                                <attach>false</attach>
                                <archive>
                                <manifest>
                                    <mainClass>
                                        com.codename1.designer.ResourceEditorApp
                                    </mainClass>
                                </manifest>
                                </archive>
                                <descriptorRefs>
